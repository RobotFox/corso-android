<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.its.pretto.samuele.esame14102016.MainActivity">

    <Button
        android:text="STORAGE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonCamera"
        android:layout_toEndOf="@+id/buttonCamera"
        android:layout_marginStart="40dp"
        android:id="@+id/buttonStorage" />

    <Button
        android:text="ACTIVITY D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="74dp"
        android:id="@+id/buttonActivityD"
        android:layout_below="@+id/buttonActivityB"
        android:layout_alignStart="@+id/buttonActivityB" />

    <Button
        android:text="ACTIVITY B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:id="@+id/buttonActivityB"
        android:layout_below="@+id/buttonCamera"
        android:layout_toStartOf="@+id/buttonStorage" />

    <Button
        android:text="CAMERA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonCamera"
        android:layout_marginStart="59dp"
        android:layout_marginTop="56dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="ACTIVITY C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonActivityC"
        android:layout_alignBaseline="@+id/buttonActivityB"
        android:layout_alignBottom="@+id/buttonActivityB"
        android:layout_alignStart="@+id/buttonStorage" />

    <Button
        android:text="ACTIVITY E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonActivityD"
        android:layout_alignEnd="@+id/buttonStorage"
        android:id="@+id/buttonActivityE" />
</RelativeLayout>
