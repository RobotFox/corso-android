<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="DATA-ORA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dataButton" />

    <Button
        android:text="LUOGO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/luogoButton" />

    <Button
        android:text="DANNI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/danniButton" />

    <Button
        android:text="FERITI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/feritiButton" />

    <Button
        android:text="TESTIMONI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/testimoniButton" />

    <Button
        android:text="CONTRAENTE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contraenteButton" />

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_add_black_24dp"
            android:layout_gravity="top|center"
            fab:elevation="6dp"
            fab:pressedTranslationZ="12dp"
            fab:backgroundTint="@color/colorPrimary">
        </android.support.design.widget.FloatingActionButton>

    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>