<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="danni materiali"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:text="veicoli oltra a A o B"/>

    <RadioButton
        android:id="@+id/radioVeicoli"
        android:layout_width="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/ic_radio_button_unchecked_black_24dp"
        android:layout_height="50dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:text="oggetti diversi dai veicoli"/>

    <RadioButton
        android:id="@+id/radioOggetti"
        android:layout_width="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/ic_radio_button_unchecked_black_24dp"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/btnModDanni"
        android:layout_width="wrap_content"
        android:textSize="25dp"
        android:layout_marginTop="50dp"
        android:text="Modifica"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />

</LinearLayout>