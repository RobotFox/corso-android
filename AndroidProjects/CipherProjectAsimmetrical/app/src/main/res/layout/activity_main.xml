<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.its.pretto.samuele.cipherprojectasimmetrical.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:id="@+id/editTextMesg"
        android:hint="Insert text here!"
        android:textStyle="normal|bold"
        android:textAlignment="center" />

    <TextView
        android:text="PhaceHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/textViewFinalMsg"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/buttonCipher" />

    <Button
        android:text="Cipher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="54dp"
        android:id="@+id/buttonCipher"
        android:layout_below="@+id/editTextMesg"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Decipher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonDecipher"
        android:layout_alignBaseline="@+id/buttonCipher"
        android:layout_alignBottom="@+id/buttonCipher"
        android:layout_alignEnd="@+id/editTextMesg" />
</RelativeLayout>
