<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.its.pretto.samuele.esame11112016.activity.MainActivity">

    <Button
        android:text="Activity 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonActivity1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="105dp" />

    <Button
        android:text="Activity 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonActivity1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="53dp"
        android:id="@+id/buttonActivity2" />

    <Button
        android:text="Activity 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/buttonActivity1"
        android:id="@+id/buttonActivity3" />

    <Button
        android:text="Activity 4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonActivity3"
        android:layout_alignStart="@+id/buttonActivity2"
        android:id="@+id/buttonActivity4" />

    <Button
        android:text="Activity 5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:id="@+id/buttonActivity5"
        android:layout_below="@+id/buttonActivity4"
        android:layout_toStartOf="@+id/buttonActivity4" />
</RelativeLayout>
